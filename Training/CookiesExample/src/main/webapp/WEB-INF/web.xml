<?xml version="1.0" encoding="UTF-8"?>
<!-- web.xml предназначен для регистрации сервлетов за соответствующими url -->
<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">

    <servlet>
        <servlet-name>Servlet1</servlet-name>
        <servlet-class>ru.alfabank.servlet.Servlet1</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Servlet2</servlet-name>
        <servlet-class>ru.alfabank.servlet.Servlet2</servlet-class>
    </servlet>

    <!--Указываем URL,для вызова сервлета. Пример:http://localhost:9091/dispatcher/название -->
    <servlet-mapping>
        <servlet-name>Servlet1</servlet-name>
        <url-pattern>/servlet1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Servlet2</servlet-name>
        <url-pattern>/servlet2</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>